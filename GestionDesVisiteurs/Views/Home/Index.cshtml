@{
    ViewData["Title"] = "Page d'accueil";
}

<div style="text-align: center; margin-top: 50px; font-family: Arial, sans-serif;">
    <img src="~/images/logo.png" alt="Logo" style="max-width: 150px; margin-bottom: 20px;">
    <h1 style="font-size: 3rem; color: #4CAF50;">Bienvenue</h1>
    <h2 style="font-size: 2rem; color: #333;">Bienvenue sur l'application de gestion des visiteurs</h2>
    <p style="font-size: 1.2rem; color: #666; margin-top: 20px;">
